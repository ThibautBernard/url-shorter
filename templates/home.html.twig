{% include "base.html.twig" %}


<div class="container-md">
    <div class="row justify-content-center">
        <div class="col-3">
            <h2>Url shortener ✂️</h2>     
        </div>
    </div>
</div>


<div class="container-md">
{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <div class="container-md">
        <div class="row justify-content-center">
            <div class="col-5">
                {% if shortUrl is defined %} 
                   Your url shorted : <a href=""> {{ shortUrl }} </a>
                {% endif %}    
            </div>
        </div>
    </div>

   
{{ form_end(form) }}
</div>